<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="cn.xiaocool.dezhischool.activity.SelectorMettingLocationActivity">
    <EditText
        android:id="@+id/metting_search_location"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:imeOptions="actionSearch"
        android:hint="请输入关键字"
        android:singleLine="true"
        android:textSize="12sp"
        android:padding="2dp"
        android:paddingLeft="10dp"
        android:background="@drawable/search_metting_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/rv_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metting_search_location" />

</android.support.constraint.ConstraintLayout>
