<?xml version="1.0" encoding="utf-8"?>

<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true"
    android:paddingBottom="1dp">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <cn.xiaocool.dezhischool.ui.RoundImageView
            android:id="@+id/roundImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/a2018316"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_call_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="田亮亮"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/roundImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_relationship_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="13791556328"
            app:layout_constraintBottom_toBottomOf="@+id/roundImageView"
            app:layout_constraintStart_toStartOf="@+id/tv_call_real_name" />

        <TextView
            android:id="@+id/tv_call_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="爸爸"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_call_real_name"
            app:layout_constraintStart_toEndOf="@+id/tv_call_real_name" />

        <TextView
            android:id="@+id/tv_first_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableRight="@drawable/queren"
            android:drawablePadding="4dp"
            android:text="亲属第一联系人"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_call_real_name"
            app:layout_constraintStart_toEndOf="@+id/tv_call_name" />
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/tv_set_first_relationship"
        android:background="#CECECE"
        android:text="标为第一联系人"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_width="180dp"
        android:layout_height="76dp"  />
    <TextView
        android:id="@+id/tv_delect_relationship"
        android:layout_width="100dp"
        android:layout_height="76dp"
        android:text="删除"
        android:textColor="#ffffff"
        android:background="#F55353"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        />



</com.mcxtzhang.swipemenulib.SwipeMenuLayout>