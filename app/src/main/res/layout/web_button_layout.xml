<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_schoolnotice">
            <ImageView
                android:id="@+id/btn_schoolnotice"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/schoolnotice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_project_notice"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_classnotice">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_project_classnotice"
                android:layout_below="@+id/btn_classnotice"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/btn_classnotice"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/classnotice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@color/white"
            android:id="@+id/web_rl_classkaoqin">
            <ImageView
                android:id="@+id/btn_classkaoqin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/studentattendance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_project_studentattendance"
                android:layout_below="@+id/btn_classkaoqin"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_school_attendance">

            <ImageView
                android:id="@+id/btn_school_attendance"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:background="@mipmap/come_leave_school" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_school_dormitory"
                android:layout_below="@+id/btn_school_attendance"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:id="@+id/web_rl_dormitory_attendance">

            <ImageView
                android:id="@+id/btn_dormitory_attendance"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:background="@mipmap/domitory_attendance" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_project_dormitory"
                android:layout_below="@+id/btn_dormitory_attendance"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </RelativeLayout>





    </LinearLayout>


    <include layout="@layout/divider_line_half"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_olineqinjia">
            <ImageView
                android:id="@+id/btn_askforleave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/askforleave"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_project_askforleave"
                android:layout_below="@+id/btn_askforleave"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_classlesson">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_project_timetable"
                android:layout_below="@+id/btn_classlesson"
                android:layout_marginTop="@dimen/home_margintop"
                android:textColor="@color/black"
                android:textSize="@dimen/font_home_project"
                />

            <ImageView
                android:id="@+id/btn_classlesson"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/timetable"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_project_homework">
            <ImageView
                android:id="@+id/btn_project_studenthomework"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/studenthomework"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_project_studenthomework"
                android:textSize="@dimen/font_home_project"
                android:textColor="@color/color_home_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView_studenthomework" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_layout_height"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/web_rl_schoolreport">
            <ImageView
                android:id="@+id/btn_project_schoolreport"
                android:layout_width="@dimen/home_image_width"
                android:layout_height="@dimen/home_image_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/home_margintop"
                android:background="@drawable/schoolreport"/>

            <TextView
                android:text="@string/home_project_schoolreport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_home_project"
                android:textColor="@color/color_home_text"
                android:id="@+id/textView_schoolreport"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>





    </LinearLayout>


    <include layout="@layout/divider_line_half"/>

    <LinearLayout
        android:id="@+id/ll_web_button_3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/web_rl_schoolnotice1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_schoolnewspaper"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/schoolnewspaper"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_schoolnewspaper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/home_project_schoolnewspaper"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/web_rl_clubactivity"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_clubactivity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/clubactivity"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_clubactivity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/home_project_clubactivity"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/web_rl_alumniassociation"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_alumniassociation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/alumniassociation"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_alumniassociation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/home_project_webclass"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/web_rl_schoolevaluate"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/home_project_schoolevaluate"
                android:textColor="@color/black"
                android:textSize="@dimen/font_home_project" />

            <ImageView
                android:id="@+id/btn_files"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/schoolevaluate" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center">>
            <RelativeLayout
                android:id="@+id/web_rl_metting"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btn_metting"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:background="@mipmap/meeting_attendance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_metting"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_project_metting"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/web_rl_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/btn_map"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/xingweiguiji"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_map"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_project_map"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"></RelativeLayout>


    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
         android:orientation="horizontal">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="90dp"
             android:layout_weight="1"
             android:gravity="center"
             android:background="@color/white"
             >
         </RelativeLayout>


     </LinearLayout>

</LinearLayout>
