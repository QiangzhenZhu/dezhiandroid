<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout_profession_circle_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_size_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/activity_size_1">

                <TextView
                    android:id="@+id/lab_map_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dip"
                    android:text="地点："
                    android:textColor="@color/font_title_main"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_map_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/lab_map_address"
                    android:paddingRight="5dip"
                    android:text="餐厅"
                    android:textColor="@color/font_title_main"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/lab_map_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dip"
                    android:text="时间："
                    android:textColor="@color/font_title_main"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_map_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/lab_map_time"
                    android:paddingRight="5dip"
                    android:text="9：30"
                    android:textColor="@color/font_title_main"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_parent_send"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_size_40"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/activity_size_10"
            android:background="@drawable/button_boder_white"
            android:text="查看图片"
            android:layout_centerVertical="true"
            android:textColor="@color/themeColor"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>

